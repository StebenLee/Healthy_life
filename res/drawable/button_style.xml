<?xml version="1.0" encoding="utf-8"?>
 <selector android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android"> 
     <item android:state_pressed="true"> 
         <shape android:shape="rectangle"> 
          <solid android:color="#6495ed"/> 
          <corners android:radius="10dp"/> 
          <stroke android:color="#afeeee" android:width="4dp"/> 
         </shape>  
     </item> 
     <item> 
         <shape android:shape="rectangle"> 
             <gradient android:useLevel="true" android:angle="45" android:endColor="#87cefa" android:startColor="#6495ed"/> 
             <corners android:radius="10dp"/> 
             <stroke android:color="#e0ffff" android:width="2dp"/> 
         </shape> 
     </item> 
 </selector>
